<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="NotesDescStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="NotesTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_font_size</item>
    </style>

    <style name="NotesDateTimeStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/homePrimaryDark</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
</resources>
